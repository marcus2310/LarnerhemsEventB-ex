<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>L-EVENT GROUP AB - Vi är billigast i Skåne!</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    
</head>
<body>
    
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")" style="">
                <img src="~/Content/bilder/logo2.png" width="300" height="120" alt=" LÄRNERHEMSEVENT">
            </a>
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation" style="">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="navbarColor03">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">

                        <a class="nav-link" href="@Url.Action("Index", "Home")"><img src="~/Content/bilder/homeicon.png" style="height:25px; width:25px;" /> Hem <span class="sr-only"></span></a>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Boka")"><img src="~/Content/bilder/calendaricon.png" style="height:25px; width:25px;" /> Boka</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Omoss")"><img src="~/Content/bilder/infoicon.png" style="height:25px; width:25px;" /> Om oss</a>
                    </li>
                </ul>
                <img src="~/Content/bilder/b.png " style="height:20%; width:20%;" />
            </div>

        </nav>
        
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - All rights reserved</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
